<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.websites.WebsitesScreen">

    <androidx.cardview.widget.CardView
        android:id="@+id/second_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_4sdp"
        android:layout_margin="@dimen/_15sdp"
        android:onClick="student"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/first_item">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/ic_students"
                android:id="@+id/image_1"
                android:layout_margin="@dimen/_10sdp"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="طلبة"
                android:id="@+id/title_1"
                android:layout_toEndOf="@+id/image_1"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="هي بوابة تحتوي على اهم المنصات الحكومية للطلبة لجميع المراحل الدراسية ، و أيضاً تقديم كافة المبادرات التي قدمتها وزارة الاتصالات للشباب . "
                android:layout_toEndOf="@+id/image_1"
                android:textSize="@dimen/_8ssp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_below="@+id/title_1"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/third_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_4sdp"
        android:layout_margin="@dimen/_15sdp"
        android:onClick="onlineServices"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/second_item">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/ic_online"
                android:id="@+id/image_2"
                android:layout_margin="@dimen/_10sdp"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="خدمات الكترونية"
                android:id="@+id/title_2"
                android:layout_toEndOf="@+id/image_2"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="هي بوابة تحتوي على أهم المنصات الحكومية للخدمات الالكترونية  ."
                android:layout_toEndOf="@+id/image_2"
                android:textSize="@dimen/_8ssp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_below="@+id/title_2"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>